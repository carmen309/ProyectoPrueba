                            @Html.ValidationMessage(@item.claseCss)
                        </fieldset>
                        <fieldset class="form-group col-md-4">
                            <label class="control-label">Titulo</label>
                            <input type="text" name="TituloC2" value="@item.anteEnlace" class="form-control col-md-4">
                            @Html.ValidationMessage(@item.anteEnlace)
                        </fieldset>
                        <fieldset class="form-group col-md-4">
                            <label class="control-label">Texto</label>
                            <input type="text" name="TextoC2" value="@item.texto" class="form-control col-md-4">
                            @Html.ValidationMessage(@item.texto)
                        </fieldset>
                    </div>
                </div>
            </div>


        }

        if (item.idEnviado == "Cuadro3" && item.enlacePadre == "Contactos")
        {

            <div class="row">
                <div class="card">
                    <div class="card-block">
                        <h5>Cuadro informativo 3</h5>
                        <hr />

                        <input type="hidden" name="IdC3" value="@item.EnlaceId" />

                        <fieldset class="form-group col-md-3">
                            <label class="control-label">Clase Icono</label>
                            <input type="text" name="CSSC3" value="@item.claseCss" class="form-control col-md-4">
                            @Html.ValidationMessage(@item.claseCss)
