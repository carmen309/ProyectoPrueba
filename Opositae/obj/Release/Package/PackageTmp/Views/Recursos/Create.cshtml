@model Opositae.Models.Enlace

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Recurso</h2>

@using (Html.BeginForm("create", "Recursos", FormMethod.Post, htmlAttributes: new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       <p class = "control-label col-md-2"><b>Nombre</b></p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.texto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.texto, "", new { @class = "text-danger" })
        </div>
    </div>

   
    <!--ENLACE PADRE-->
    <div class="form-group">
        <p class="control-label col-md-2"><b>Tipo De Recurso</b></p>
        <div class="col-md-10">
        <select autofocus="autofocus" class="form-control valid" id="TipoDeRecurso" name="idEnviado">
            <option value="ProgramasParaDescargar">Programas Para Descargar</option>
            <option value="TecnicasDeEstudio">Técnicas De Estudio</option>
            <option value="PlantillasDeExamen">Plantillas De Examen</option>
            <option value="ExamenesDeOtrasConvocatorias">Examenes De Otras Convocatorias</option>
            <option value="OtrosRecursos">Otros Recursos</option>
        </select>
        <span class="field-validation-valid" data-valmsg-for="CategoriaBlog" data-valmsg-replace="true"></span>
        </div>
    </div>

    <!--ARCHIO / PROGRAMA-->
    <div class="form-group">
        <p class="control-label col-md-2"><b>Archivo / Programa</b></p>
        <div class="col-md-10">
            <input type="file" name="Archivo" id="Archivo" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
