@model Opositae.Models.Menu2
@{

    Layout = null; //Para que no pille el general

    if (Session["menuopt"] == null)
    {
        Session["menuopt"] = "0";
    }
    string activaFront = "active";

}


<div class="header-main-wrapper">
    <div class="navbar-heade">
        <div class="logo pull-left"><a href="@Model.MisEnlacesMejorados.First().enlace.Imprimete()" class="header-logo">
            <img src="@Model.MisEnlacesMejorados.First().imagen.imagenPath()" alt="" /></a></div>
        <button type="button" data-toggle="collapse" data-target=".navigation" class="navbar-toggle edugate-navbar" style="background-color: #86bc42;">

                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
</div>
    <nav class="navigation collapse navbar-collapse pull-right">
        <ul class="nav-links nav navbar-nav">

            @foreach(var item in Model.MisEnlaces)
            {
                {activaFront = (Session["menuopt"].ToString() == @item.texto) ? "active" : "";}
                <li class="@activaFront"><a href="@Url.Action(item.accion, item.controlador)" class="main-menu">@item.texto</a></li>
            }


        </ul>
    </nav>
</div>



