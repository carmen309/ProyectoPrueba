@model Opositae.Models.CategoriaBlog

@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "CategoriasBlog")">Categorías de blog</a></li>
    <li class="breadcrumb-item active">Borrar</li>
</ol>
<div class="row">
    <div class="text-right margin-b-10">
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "CategoriasBlog")'">
            <i class="material-icons btn__icon--left">arrow_back</i> Volver
        </button>
    </div>
    <div class="card">
        <div class="card-block">
            <h5>Borrar categoría de blog</h5>
            <hr />
            <div class="alert alert-warning" role="alert">
                <strong>¡Atención!</strong> El borrado de este elemento será irreversible.
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Activa)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Activa)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-right">
                    <button type="submit" class="btn btn-danger">
                        <i class="material-icons btn__icon--left">delete</i> Borrar
                    </button>
                </div>

            }

        </div>
    </div>
</div>