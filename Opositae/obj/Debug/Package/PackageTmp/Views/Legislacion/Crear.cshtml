@model Opositae.Models.Legislacion
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Legislacion")">Legislación</a></li>
    <li class="breadcrumb-item active">Crear</li>
</ol>
<div class="row">
    <div class="text-right margin-b-10">
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Legislacion")'">
            <i class="material-icons btn__icon--left">arrow_back</i> Volver
        </button>
    </div>
    <div class="card">
        <div class="card-block">
            <h5>Crear norma</h5>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <fieldset class="form-group">
                    <label class="control-label" for="Categorias">Categoría</label>
                    @Html.DropDownList("Categorias", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Categoria)
                </fieldset>

                <fieldset class="form-group">
                    @Html.LabelFor(model => model.Norma, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Norma, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Norma)
                </fieldset>

                <fieldset class="form-group">
                    @Html.LabelFor(model => model.Enlace, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Enlace, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Enlace)
                </fieldset>

                <div class="text-right">
                    <button type="submit" class="btn btn-success">
                        <i class="material-icons btn__icon--left">add</i> Guardar
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}