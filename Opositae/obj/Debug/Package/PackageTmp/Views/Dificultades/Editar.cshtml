@model Opositae.Models.Dificultad

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dificultades")">Dificultades</a></li>
    <li class="breadcrumb-item active">Editar</li>
</ol>
<div class="row">
    <div class="text-right margin-b-10">
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Dificultades")'">
            <i class="material-icons btn__icon--left">arrow_back</i> Volver
        </button>
    </div>
    <div class="card">
        <div class="card-block">
            <h5>Editar dificultad</h5>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <fieldset class="form-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.Descripcion)
                </fieldset>


                <fieldset class="form-check">
                    @Html.CheckBoxFor(model => model.Activa, new { @checked = "checked" })
                    @Html.LabelFor(model => model.Activa, new { @class = "control-label" })

                    @Html.ValidationMessageFor(model => model.Activa)
                </fieldset>

                <div class="text-right">
                    <button type="submit" class="btn btn-success">
                        <i class="material-icons btn__icon--left">create</i> Guardar
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}