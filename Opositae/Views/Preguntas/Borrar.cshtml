@model Opositae.Models.Pregunta

@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string respuesta = "A";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Preguntas")">Preguntas</a></li>
    <li class="breadcrumb-item active">Borrar</li>
</ol>
<div class="row">
    <div class="text-right margin-b-10">
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Preguntas")'">
            <i class="material-icons btn__icon--left">arrow_back</i> Volver
        </button>
    </div>
    <div class="card">
        <div class="card-block">
            <h5>Borrar pregunta</h5>
            <hr />
            <div class="alert alert-warning" role="alert">
                <strong>¡Atención!</strong> El borrado de este elemento será irreversible.
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Categoria.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Dificultad)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Dificultad.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Texto)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Texto)
                </dd>

                @foreach (var item in Model.Respuestas)
                {
                    <dt>
                        Respuesta @respuesta
                        @Html.DisplayFor(model => item.Correcta)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => item.Texto)
                    </dd>
                    switch (respuesta)
                    {
                        case "A":
                            respuesta = "B";
                            break;
                        case "B":
                            respuesta = "C";
                            break;
                        case "C":
                            respuesta = "D";
                            break;
                        default:
                            respuesta = "A";
                            break;
                    }
                }

                <dt>
                    Justificación
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.JustificacionRespuesta)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Activa)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Activa)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-right">
                    <button type="submit" class="btn btn-danger" >
                        <i class="material-icons btn__icon--left">delete</i> Borrar
                    </button>
                </div>

            }
            
        </div>
    </div>
</div>


