@model IEnumerable<Opositae.Models.ItemEslider>
@{

    Layout = null; //Para que no pille el general
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">

        
        @{int Contador = 0;}
        @foreach (var item in Model)
        {

            if (item == Model.First())
            {
                <li data-target="#myCarousel" data-slide-to="@Contador" class="active circuloSlider"></li>
            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@Contador" class="circuloSlider"></li>
            }

            Contador = (Contador+1);

            
        }
        
        

    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner " style="height:300px">

        @foreach (var item in Model)
        {
            if (item == Model.First())
            {
                <div class="item active" style="height:300px;background-image:url(@item.imagenSlider.imagenPath());">

                    <div class="carousel-caption">
                        <h3 class="text-info-1">@item.titulo</h3>
                        <h5 class="text-info-2">@item.subtitulo</h5>
                        <p class="text-info-3">@item.texto</p>
                    </div>
                </div>

            }
            else
            {
                <div class="item" style="height:300px; background-image:url(@item.imagenSlider.imagenPath()) ;">

                    <div class="carousel-caption">
                        <h3 class="text-info-1">@item.titulo</h3>
                        <h5 class="text-info-2">@item.subtitulo</h5>
                        <p class="text-info-3">@item.texto</p>
                    </div>
                </div>

            }

        }



    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="fa fa-angle-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="fa fa-angle-right"> </span>
        <span class="sr-only">Next</span>
    </a>
</div>






